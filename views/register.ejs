<% include partials/header %>

<div class="container top-offset">
    <div class="row">
        <div class="col p-0">
            <div class="card m-3">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/user" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="user[username]" placeholder="username">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="user[email]" placeholder="email">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="user[password]" placeholder="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Sign up</button>
                        <a class="btn btn-primary" href="/">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>